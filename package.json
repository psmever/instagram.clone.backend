{
  "name": "instagram.clone.backend",
  "version": "1.0.0",
  "main": "./src/App.ts",
  "license": "MIT",
  "config": {
    "ionic_source_map_type": "source-map",
    "ionic_webpack": "./webpack.config.js"
  },
  "scripts": {
    "start": "nodemon --exec ts-node -r tsconfig-paths/register --files src/App.ts -e ts",
    "lint:do": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "yarn build:clear && yarn build:src",
    "build:start": "yarn build:clear && yarn build && yarn start",
    "build:clear": "rm -rf public || true",
    "build:src": "webpack --config ./webpack.config.js",
    "build:tsc": "tsc -p .",
    "server:test": "yarn build:clear && yarn build:src && node public/index.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/pug": "^2.0.6",
    "@types/webpack": "^5.28.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/parser": "^5.35.1",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.1",
    "html-webpack-plugin": "^5.5.0",
    "mysql2": "^2.3.3",
    "path": "^0.12.7",
    "pug": "^3.0.2",
    "ts-loader": "^9.3.1",
    "tsconfig-paths": "^4.1.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0",
    "winston": "^3.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  }
}
